{
  "compilerOptions": {
    "allowJs": false,
    "lib": ["esnext"],
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "outDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@test/*": ["test/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["src/**/*", "spec/**/*"],
  "exclude": ["*.test.ts","node_modules/*","./node_modules/@types/node/index.d.ts","./node_modules"],
  "compileOnSave": true
}
